<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:TravelMate.ViewModels"
             x:Class="TravelMate.Views.SearchPage">
    <ContentPage.BindingContext>
        <vm:SearchViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
    <Grid BackgroundColor="#004c8c">
        <BoxView Opacity="0.3" BackgroundColor="#00c2ff"/>
        <Grid HeightRequest="500" Margin="20">
            <Path Fill="black" Aspect="Uniform" HorizontalOptions="Center"
                  Data ="M100.6,200.838V900.314L700.157,426.722" Opacity="0.2"/>
            <Path Fill="white" StrokeThickness="1" Aspect="Uniform" HorizontalOptions="Center"
                  Data="M30.6,172.838V650.665L320.465,404.5812" Opacity="0.8"/>
            <StackLayout Spacing="50" VerticalOptions="CenterAndExpand" Margin="50,0">
                <Label Text="Search Results" FontSize="50" FontAttributes="Bold"  HorizontalOptions="Center" 
                       TextColor="#bb002f" FontFamily="LuckiestGuy-Regular.ttf#Regular"/>

                <CollectionView ItemsSource="{Binding ItemList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                                <StackLayout>
                                    <Label Text="{Binding title}" VerticalTextAlignment="Center" FontSize="Large" TextTransform="Uppercase" TextColor="Red"/>
                                    <Label Text="{Binding address.city}" VerticalTextAlignment="Center" FontSize="Small" TextTransform="Uppercase"/>
                                    <Label Text="{Binding address.street}" VerticalTextAlignment="Center" FontSize="Subtitle" TextTransform="Uppercase"/>
                                    <Label Text="{Binding address.postalCode}" VerticalTextAlignment="Center" FontSize="Subtitle" TextTransform="Uppercase"/>
                                </StackLayout>
                            </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>
        </Grid>
    </Grid>
    </ScrollView>
</ContentPage>